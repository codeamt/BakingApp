<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack"
    android:orientation="horizontal"
    android:padding="@dimen/spacing10dp">

    <LinearLayout
        android:layout_width="@dimen/spacing250dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/spacing20dp"
        android:orientation="vertical">
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="@dimen/spacing250dp"
            android:layout_height="wrap_content"
            card_view:cardBackgroundColor="@color/colorBlack"
            card_view:cardCornerRadius="4dp"
            card_view:contentPaddingLeft="@dimen/activity_horizontal_margin"
            android:layout_margin="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:background="@color/colorWhite"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:padding="15dp"
                    android:background="@color/colorBlack"
                    android:textColor="@color/colorWhite"
                    android:text="Instructions"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:background="@color/colorWhite"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recipe_detail_recycler"
            android:background="@color/colorBlack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing5dp"
            android:layout_marginBottom="@dimen/spacing5dp"
            android:layout_marginLeft="@dimen/spacing5dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardBackgroundColor="@color/colorBlack"
            card_view:cardCornerRadius="4dp"
            card_view:contentPaddingLeft="@dimen/activity_horizontal_margin"
            android:layout_margin="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:background="@color/colorWhite"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:padding="15dp"
                    android:background="@color/colorBlack"
                    android:textColor="@color/colorWhite"
                    android:text="Video Tutorial"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:background="@color/colorWhite"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/spacing10dp"
                android:id="@+id/fragment_container2">
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>