<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="@dimen/spacing150dp"
    card_view:cardCornerRadius="@dimen/spacing4dp"
    card_view:cardBackgroundColor="@color/colorPink"
    android:layout_margin="@dimen/spacing5dp"
    android:layout_alignParentTop="false"
    android:layout_centerHorizontal="false"
    android:layout_gravity="center_horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing50dp"
            android:gravity="center_vertical"
            android:layout_centerInParent="false"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:layout_centerHorizontal="false"
            android:textAlignment="center"
            android:layout_centerVertical="false" />

        <ImageView
            android:id="@+id/recipeImage"
            android:layout_gravity="start"
            android:paddingRight="@dimen/spacing15dp"
            android:paddingEnd="@dimen/spacing15dp"
            android:paddingStart="@dimen/spacing15dp"
            android:paddingLeft="@dimen/spacing15dp"
            android:elevation="@dimen/elevation"
            android:layout_marginTop="@dimen/spacing40dp"
            android:layout_marginBottom="@dimen/spacing40dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>



</android.support.v7.widget.CardView>